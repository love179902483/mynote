

" .vimrc 借鉴
" https://github.com/chxuan/vimplus/blob/master/.vimrc
" 从vim导入nvim 
" ln -s ~/.vimrc ~/.config/nvim/init.vim


" 通用设置
set nocompatible                " be iMproved, required
set number                      " 设置行号"
set t_Co=256                    " 开启256颜色支持"
syntax on                       " 自动语法高亮"
set showcmd                     " 设置命令行高度"
set laststatus=2                " 总是显示状态栏"
syntax enable
set cursorline                  " highlight show current line
set virtualedit=block,onemore   " 允许光标出现在最后一个字符的后面
set ruler                       " 总是显示光标位置


" 编码设置
set langmenu=zh_CN.UTF-8
set helplang=cn
set termencoding=utf-8
set encoding=utf8
set fileencodings=utf8,ucs-bom,gbk,cp936,gb2312,gb18030


" 代码缩进排版
set autoindent                  "设置自动缩进"
set smartindent                 "只能对齐方式"
filetype indent on              "自适应不同语言的对齐方式"
set expandtab                   "制表符扩展为空格"
set nowrap                      "禁止折行"
set smarttab                    " 在行和段开始处使用制表符
set sidescroll=10               " 设置向右滚动字符数


" start highlight in search 
set hlsearch
highlight Search ctermbg=yellow ctermfg=black
highlight IncSearch ctermbg=black ctermfg=yellow


" 缓存设置
set autowrite                   " 设置自动保存"
set confirm                     " 处理未保存或只读文件的时候弹出确认"



" 插件列表
call plug#begin('~/.vim/plugged')

" python source complete
Plug 'zchee/deoplete-jedi'

" vim terminal color plugin
Plug 'drewtempelmeyer/palenight.vim'
Plug 'itchyny/lightline.vim'

" status bar
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'


" auto pairs 
Plug 'jiangmiao/auto-pairs'

" code plugins
" align symble
Plug 'junegunn/vim-easy-align'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-commentary'

Plug 'scrooloose/nerdtree'
Plug 'tiagofumo/vim-nerdtree-syntax-highlight'
Plug 'Xuyuanp/nerdtree-git-plugin'

" markdown plugins
Plug 'godlygeek/tabular'
Plug 'plasticboy/vim-markdown'
Plug 'suan/vim-instant-markdown', {'rtp': 'after'}

Plug 'tpope/vim-fugitive'
" plugin from http://vim-scripts.org/vim/scripts.html
" Plug 'L9'
" Git plugin not hosted on GitHub
Plug 'git://git.wincent.com/command-t.git'
" git repos on your local machine (i.e. when working on your own plugin)
" Plug 'file:///home/gmarik/path/to/plugin'
" The sparkup vim script is in a subdirectory of this repo called vim.
" Pass the path to set the runtimepath properly.
Plug 'rstacruz/sparkup', {'rtp': 'vim/'}
" Install L9 and avoid a Naming conflict if you've already installed a
" different version somewhere else.
" Plugin 'ascenator/L9', {'name': 'newL9'}

" All of your Plugins must be added before the following line
call plug#end()            " required


" Markdown settings 

" 不折叠显示，默认是折叠显示，看个人习惯
let g:vim_markdown_folding_disabled = 1 
let g:vim_markdown_override_foldtext = 0
" 可折叠的级数，对应md的标题级别
let g:vim_markdown_folding_level = 6   
let g:vim_markdown_no_default_key_mappings = 1
let g:vim_markdown_emphasis_multiline = 0
set conceallevel=2
let g:vim_markdown_frontmatter=1


" 主题
" colorscheme palenight
" colorscheme onedark
let g:onedark_termcolors=256
set background=dark


" nerdtree
nnoremap <silent> <leader>n :NERDTreeToggle<cr>
inoremap <silent> <leader>n <esc> :NERDTreeToggle<cr>
let g:NERDTreeFileExtensionHighlightFullName = 1
let g:NERDTreeExactMatchHighlightFullName = 1
let g:NERDTreePatternMatchHighlightFullName = 1
let g:NERDTreeHighlightFolders = 1         
let g:NERDTreeHighlightFoldersFullName = 1 
let g:NERDTreeDirArrowExpandable='▷'
let g:NERDTreeDirArrowCollapsible='▼'

" 绑定快捷键 nerdtree
map <C-l> :tabn<CR>
map <C-h> :tabp<CR>
map <C-n> :tabnew<CR>

" color vim
" let g:airline_theme = "palenight"
if (has("nvim"))
  "For Neovim 0.1.3 and 0.1.4 < https://github.com/neovim/neovim/pull/2198 >
  let $NVIM_TUI_ENABLE_TRUE_COLOR=1
endif

"For Neovim > 0.1.5 and Vim > patch 7.4.1799 < https://github.com/vim/vim/commit/61be73bb0f965a895bfb064ea3e55476ac175162 >
"Based on Vim patch 7.4.1770 (`guicolors` option) < https://github.com/vim/vim/commit/8a633e3427b47286869aa4b96f2bfc1fe65b25cd >
" < https://github.com/neovim/neovim/wiki/Following-HEAD#20160511 >
if (has("termguicolors"))
  set termguicolors
endif
" 配色网站https://zhuanlan.zhihu.com/p/58188561

" equires vim8 with has('python') or has('python3')
" Requires the installation of msgpack-python. (pip install msgpack-python)


"  auto complete 
if has('nvim')
  Plug 'Shougo/deoplete.nvim', { 'do': ':UpdateRemotePlugins' }
else
  Plug 'Shougo/deoplete.nvim'
  Plug 'roxma/nvim-yarp'
  Plug 'roxma/vim-hug-neovim-rpc'
endif
let g:deoplete#enable_at_startup = 1

